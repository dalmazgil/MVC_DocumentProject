@model EntityLayer.Concrete.HelpCategory
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Kategori Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateHelpCategory", "HelpCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Kategori Açıklaması")
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Kategori Resim URL")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}
