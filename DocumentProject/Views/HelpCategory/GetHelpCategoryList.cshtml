@using EntityLayer.Concrete
@model List<HelpCategory>

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetHelpCategoryList</title>
</head>
<body>
    <div>
        <p>Burası HelpCategory GetHelpCategoryList Sayfasıdır.</p>
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Image</td>
                    <td><a href="#" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="#" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </table>
        <br />
        <a href="/HelpCategory/AddHelpCategory" class="btn btn-info">Yeni Kategori</a>
    </div>
</body>
</html>
