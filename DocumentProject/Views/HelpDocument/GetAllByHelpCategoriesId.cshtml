@using EntityLayer.Concrete
@model List<HelpDocument>

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllByHelpCategoriesId</title>
</head>
<body>
    <div>
        <p>Burası HelpDocument GetAllByHelpCategoriesId Sayfasıdır.</p>
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>HelpCategoriesId</th>+
                <th>Title</th>
                <th>Body</th>
                <th>Order</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.HelpCategoriesId</td>
                    <td>@item.Title</td>
                    <td>@item.Body</td>
                    <td>@item.Order</td>
                    <td><a href="/HelpDocument/UpdateHelpDocument/@item.Id" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="/HelpDocumentController/DeleteHelpDocument/@item.Id" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </table>
        <br />
        <a href="/HelpDocument/AddHelpDocument" class="btn btn-info">Yeni Doküman</a>
        <a href="/HelpCategory/GetHelpCategoryList" class="btn btn-default">Kategori Görüntüle</a>
    </div>
</body>
</html>

